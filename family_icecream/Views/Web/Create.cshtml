        <form name="CreateIceForm" method="post">
            <div class="form-group">
                <label for="StoreNameID">店家名稱</label>
                <select id="StoreNameID" name="storeName" class="form-control">
                    @foreach (var item in Model)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="flavorID">口味</label>
                <select id="flavorID" name="flavor" class="form-control">
                    @for (int i = 0; i < flavorOption.Count(); i++)
                    {
                        <option value="@flavorOption[i]">@flavorOption[i]</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">送出</button>
        </form>
